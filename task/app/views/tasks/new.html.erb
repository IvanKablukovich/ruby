<%= form_for :task, url: tasks_path do |f| %>
  <strong style="color:red;"><%= render 'flashes' %> </strong>

  <% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@task.errors.count, "error") %> Task cant be saved:</h2>
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <p>
    Subject<br>
    <%= f.text_field(:subject, {:class => 'form-control'}) %>
  </p>

  <p>
    Description<br>
    <%= f.text_area(:description, {:class => 'form-control'}) %>
  </p>

  <p>
    Assignee<br>
    <%= f.text_field(:assignee, {:class => 'form-control'}) %>
  </p>

  <p>
    ID<br>
    <%= f.text_field(:user_id, {:class => 'form-control'}) %>
  </p>

  <p>
    Status<br>
    <%= f.select :status, options_for_select(["To do", "In progress", "In review"]) %>
  </p>

  <p>
    <%= f.submit({:class => 'btn btn-success'})%>
  </p>
<% end %>
