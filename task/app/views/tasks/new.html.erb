<%= form_for :task, url: tasks_path do |f| %>
  <strong style="color:red;"><%= render 'flashes' %> </strong>

  <% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@task.errors.count, "error") %> Task cant be saved:</h2>
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <p>
    Subject<br>
    <%= f.text_field :subject %>
  </p>

  <p>
    Description<br>
    <%= f.text_area :description %>
  </p>

  <p>
    Assignee<br>
    <%= f.text_field :assignee %>
  </p>

  <p>
    ID<br>
    <%= f.text_field :user_id %>
  </p>

  <p>
    <%= f.submit%>
  </p>
<% end %>
