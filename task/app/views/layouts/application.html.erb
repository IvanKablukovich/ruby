<!DOCTYPE html>
<html>
  <head>
    <title>Task</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h5 class="my-0 mr-md-auto font-weight-normal">Task Menager</h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <span class="p-2 text-dark"><%= link_to 'Main Page', home_path%></span>
        <span class="p-2 text-dark"><%= link_to('Logout', destroy_user_session_path, method: :delete) %> </span>

      </nav>
      <span class="btn btn-outline-primary"><%= link_to 'Add Task', new_task_path%></span>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
